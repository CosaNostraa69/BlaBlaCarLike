{% extends 'base.html.twig' %}

{% block title %}Ajouter un trajet{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Ajouter un trajet</h1>

        {{ form_start(addRide, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        {% for field in addRide %}
            <div class="mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
            </div>
        {% endfor %}

        <div class="d-grid gap-2">
            <button class="btn btn-primary btn-lg mt-3" type="submit">
                <i class="fas fa-plus-circle"></i> Ajouter
            </button>
        </div>

        {{ form_end(addRide) }}
    </div>
{% endblock %}
