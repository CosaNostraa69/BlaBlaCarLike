{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier le profil</h1>

        {{ form_start(editProfile, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="mb-3">
                {{ form_label(editProfile.first_name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(editProfile.first_name, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(editProfile.last_name, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(editProfile.last_name, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(editProfile.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(editProfile.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(editProfile.phone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(editProfile.phone, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">{{ button_label|default('Enregistrer') }}</button>
            </div>

        {{ form_end(editProfile) }}
    </div>
{% endblock %}
